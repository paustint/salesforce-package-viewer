{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": { "@src/*": ["src/*"] },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "types": ["node", "@types/jest"]
  }
}
